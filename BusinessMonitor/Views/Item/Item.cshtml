@model ItemViewModel
@{
    ViewData["Title"] = "Item";
}

<h1>Item</h1>

<h2>Section title</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>VAT</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Available</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ItemViewModel.ViewItem items in Model.ListOfItem)
            {
            <tr>
                <td>@items.ItemID</td>
                <td>@items.Description</td>
                <td>@items.VAT</td>
                <td>@items.Price</td>
                <td>@items.Amount</td>
                <td>@items.InStock</td>
            </tr>
            }
        </tbody>
    </table>
</div>