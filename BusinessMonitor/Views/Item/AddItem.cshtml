
@{
    ViewData["Title"] = "AddItem";
}

<form class="container">
    <br />
    <div class="col-11 shadow" style="padding-bottom:20px;padding-top:20px;">
        <center><h1>Add new item</h1></center><br />
        <div class="form-group">
            <label for="ProductName">Productname</label>
            <input type="text" class="form-control" id="ProductName" placeholder="Enter productname">
        </div>
        <div class="form-group">
            <label for="ProductDescription">Productdescription</label>
            <textarea type="text" class="form-control" id="ProductDescription" placeholder="Enter productdescription"></textarea>
        </div>
        <br /><hr /><br />
                    <div class="row">
                        <div class="col-auto">
                            <label>Price</label>
                            <label class="sr-only" for="inlineFormInputGroup">Price</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">€</div>
                                </div>
                                <input type="text" class="form-control" id="Price" placeholder="Price">
                            </div>
                        </div>
                        <div class="col-auto">
                            <label>VAT</label>
                            <label class="sr-only" for="inlineFormInputGroup">VAT</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">%</div>
                                </div>
                                <input type="text" class="form-control" id="VAT" placeholder="VAT">
                            </div>
                        </div>
                        <div class="col-auto">
                            <label>Amount</label>
                            <label class="sr-only" for="inlineFormInputGroup">Amount</label>
                            <div class="input-group mb-2">
                                <input type="number" class="form-control" id="Amount" placeholder="Amount" min="0" max="1000000" step="1">
                            </div>
                        </div>
                        <div class="col-auto">
                            <label>Available</label>
                            <label class="sr-only" for="inlineFormInputGroup">Available</label>
                            <div class="input-group mb-2">
                                <input type="checkbox" class="form-control" id="Available" placeholder="Available">
                            </div>
                        </div>
                    </div><br />
        <div class="col-md-12 text-center">
            <button type="button" onclick="SubmitItem();" class="btn btn-info btn-lg">Add item</button>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    function SubmitItem(Name, Desc, Price, VAT, Amount) {
        var Name = document.getElementById("ProductName").value;
        var Desc = document.getElementById("ProductDescription").value;
        var Price = document.getElementById("Price").value;
        var VAT = document.getElementById("VAT").value;
        var Amount = document.getElementById("Amount").value;
        var Available = document.getElementById("Available").checked;
        console.log(Amount);
        $.ajax({
            type: "Post",
            url: '/Item/SubmitItem',
            data: {
                'Name': Name,
                'Desc': Desc,
                'Price': Price,
                'VAT': VAT,
                'Amount': Amount,
                'Available': Available
            },
            success: function () {
                console.log("geslaagd!");
            }
        });
    }
</script>