@model InvoiceViewModel
@{
    ViewData["Title"] = "Invoice";
}
<style>
    .tableFixHead {
        overflow-y: auto;
        height: 500px;
    }

        .tableFixHead thead th {
            position: sticky;
            top: 0;
        }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px 16px;
    }

    th {
        background: #eee;
    }

    canvas {
        width: 100% !important;
        max-width: 800px;
        height: auto !important;
    }
</style>

<h1>Invoice</h1>
<div class="container">
    <div class="row">
        <div class="col-9">
            <a class="btn btn-primary btn-xs" asp-controller="Invoice" asp-action="NewInvoice">Add invoice</a>
        </div>
        <div class="col-3">
            <div class="search-box">
                <input id="SearchBar" class="form-control input-group-lg" type="text" placeholder="Search..">
            </div>
        </div>
    </div>
</div><br />
    <div class="table-responsive">
        <table id="data" class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Reference</th>
                    <th>Amount</th>
                    <th>Paymentdate</th>
                    <th>Paymentstatus</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="Invoice">
                @foreach (var item in Model.ListOfInvoices)
                {
                    <text>
                        <tr>
                            <td>@item.InvoiceNumber</td>
                            <td>@item.InvoiceReference.CompanyName</td>
                            <td>&#8364; @item.TotalPrice</td>
                            <td>@item.PayementDate.Date.ToString("dd/MM/yyyy")</td>
                            <td>@item.PaymentStatus</td>
                            <td><a id="@item.InvoiceNumber" asp-controller="Invoice" asp-action="EditInvoice" asp-route-id="@item.InvoiceNumber" title="Open"><button class="btn btn-primary btn-xs"><i class="fas fa-eye"></i></button></a></td>
                            <td><p id="@item.InvoiceNumber" onclick="RemoveInvoice('@item.InvoiceNumber')" title="Delete"><button class="btn btn-danger btn-xs"><i class="fas fa-trash-alt"></i></button></p></td>
                        </tr>
                    </text>
                }
            </tbody>
        </table>
    </div>
<hr />
<h2>Data progress</h2>
<div class="wrapper">
    <canvas class="my-4" id="myChart"></canvas>
</div>
<div class="col-3"></div>
@*Search function*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#SearchBar").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#data tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    function RemoveInvoice(ID) {
        $.ajax({
            type: "Post",
            url: '/Invoice/RemoveInvoice',
            data: {
                'id': ID,
            },
            success: function () { location.reload(); }
        });
    }
</script>
@*Chart API*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script>
    var ctx = document.getElementById("myChart");
    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Debit open', 'Debit payed', 'Credit open', 'Credit payed'],
            datasets: [{
                label: '# of Tomatoes',
                data: [12, 19, 3, 5],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            cutoutPercentage: 40,
            responsive: false,

        }
    });
</script>
